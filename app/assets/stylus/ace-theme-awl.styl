.ace-monokai
    .ace_gutter
        background: #2F3129
        color: #8F908A

    .ace_print-margin
        width: 1px
        background: #555651

        background-color: #272822
        color: #F8F8F2

    .ace_cursor
        color: #F8F8F0

    &.ace_multiselect
        .ace_selection.ace_start
            box-shadow: 0 0 3px 0px #272822

    .ace_marker-layer
        .ace_selection
            background: #49483E
        
        .ace_step
            background: rgb(102, 82, 0)

        .ace_bracket
            margin: -1px 0 0 -1px
            border: 1px solid #49483E

        .ace_active-line
            background: #202020

        .ace_selected-word
            border: 1px solid #49483E

    .ace_gutter-active-line
        background-color: #272727

    .ace_invisible
        color: #52524d
        
    .ace_indent-guide
        background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAACCAYAAACZgbYnAAAAEklEQVQImWPQ0FD0ZXBzd/wPAAjVAoxeSgNeAAAAAElFTkSuQmCC") right repeat-y

    .ace_fold
        background-color: #A6E22E
        border-color: #F8F8F2
    
    ////////////
    // Tokens //
    ////////////

    .ace_operator
        color: #F92672
        
    .ace_bracket
        color: #fff

    .ace_constant
        color: #AE81FF

    .ace_variable
        color: #66D9EF

    .ace_comment
        color: #75715E
        
    .ace_exponent
        display: inline-block
        transform: translateY(-22%)

        color: #FD971F
        font-size: smaller
